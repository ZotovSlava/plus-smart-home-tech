@namespace("ru.yandex.practicum.kafka.telemetry.event")
protocol SensorEventProtocol {
	record ClimateSensorEventAvro {
		string id;
		string hub_id;
		@logicalType("timestamp-millis")
		long timestamp;
		int temperature_c;
		int humidity;
		int co2_level;
	}

	record LightSensorEventAvro {
		string id;
		string hub_id;
		@logicalType("timestamp-millis")
		long timestamp;
		int link_quality;
		int luminosity;
	}

	record MotionSensorEventAvro {
		string id;
		string hub_id;
		@logicalType("timestamp-millis")
		long timestamp;
		int link_quality;
		boolean motion;
		int voltage;
	}

	record SwitchSensorEventAvro {
		string id;
		string hub_id;
		@logicalType("timestamp-millis")
		long timestamp;
		boolean state;
	}

	record TemperatureSensorEventAvro {
		string id;
		string hub_id;
		@logicalType("timestamp-millis")
		long timestamp;
		int temperature_c;
		int temperature_f;
	}

	record SensorEventAvro {
		string id;
		string hub_id;
		@logicalType("timestamp-millis")
		long timestamp;
		union {
			ClimateSensorEventAvro,
			LightSensorEventAvro,
			MotionSensorEventAvro,
			SwitchSensorEventAvro,
			TemperatureSensorEventAvro
		} payload;
	}
}